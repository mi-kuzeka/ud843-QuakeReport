<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/magnitude_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/item_margin_horizontal"
        android:layout_weight="1"
        android:gravity="center|start"
        tools:text="@string/temp_magnitude" />

    <TextView
        android:id="@+id/place_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/item_margin_horizontal"
        android:layout_marginEnd="@dimen/item_margin_horizontal"
        android:layout_weight="5"
        android:gravity="center|start"
        tools:text="@string/temp_place" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/item_margin_horizontal"
        android:layout_weight="3"
        android:gravity="center|start"
        tools:text="@string/temp_date" />

</LinearLayout>